<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 指定工作空间，要与接口名相同，源代码没有去看，猜测应该是通过"这里的namespace.下边方法的id"来定位方法的 -->
<mapper namespace="com.example.demo.Mapper.UserMapper">
    <resultMap id="Usermap" type="com.example.demo.Entity.UserEntity">
        <id column="id" property="id"/>
        <result column="account" property="Username"/>
        <result column="password" property="password"/>
        <result column="is_active" property="enabled"/>
    </resultMap>

    <select id="findFromStudent" resultMap="Usermap">
        select id,account,password,is_active from student where account=#{account}
    </select>

    <select id="findFromTeacher" resultMap="Usermap">
        select id,account,password,is_active from teacher where account=#{account}
    </select>

</mapper>