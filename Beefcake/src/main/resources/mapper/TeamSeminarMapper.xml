<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 指定工作空间，要与接口名相同，源代码没有去看，猜测应该是通过"这里的namespace.下边方法的id"来定位方法的 -->
<mapper namespace="com.example.demo.Dao.TeamSeminarDao">
    <resultMap id="teamseminarmap" type="com.example.demo.Entity.TeamSeminarEntity">
        <id column="id" property="id"/>
        <result column="seminar_id" property="seminarId"/>
        <result column="team_id" property="teamId"/>
        <result column="no" property="no"/>
    </resultMap>

    <select id="find" resultType="com.example.demo.Entity.TeamSeminarEntity" resultMap="teamseminarmap">
        SELECT * FROM team_seminar WHERE team_id=${teamId} AND no=${no}
    </select>

    <select id="findAll" resultType="com.example.demo.Entity.TeamSeminarEntity" resultMap="teamseminarmap">
        SELECT * FROM team_seminar WHERE seminar_id= #{seminarId} ORDER BY no ASC
    </select>

    <insert id="save">
        insert into team_seminar(seminar_id,team_id,no) values(#{seminarId},#{teamId},#{no})
    </insert>

    <update id="start">
        update seminar set status=1 where id=#{seminarId}
    </update>
</mapper>